---
import Layout from '~/layouts/LandingLayout.astro';

import Hero from '~/components/widgets/Hero.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const metadata = {
  title: 'coding-cli',
};
---

<Layout metadata={metadata}>
  <!-- Hero2 Widget ******************* -->

  <Hero
    tagline="coding-cli"
    title="Dev-Friendly CLI Assistant"
    subtitle="Explain, edit and fix your files with AI directly from your terminal"
    actions={[
      { variant: 'primary', text: 'npm install @cle-does-things/coding-cli', href: 'https://github.com/AstraBert/coding-cli', icon: 'tabler:arrow-right' },
      { text: 'npx @cle-does-things/coding-cli info', href: 'https://github.com/AstraBert/coding-cli/tree/main/README.md' },
    ]}
    image={{
      src: '~/assets/images/coding-cli.png',
      alt: 'coding-cli logo',
      width: 500,
      height: 500,
    }}
  />

  <CallToAction
    title="Get coding-cli now!"
    subtitle="coding-cli is a dev-friendly AI assistant that lives in your terminal, suitable for all levels of expertise and with sharp editing, fixing and explaining capabilities. Curious to try it out?"
    actions={[
      {
        variant: 'primary',
        text: 'To the app',
        href: 'https://github.com/AstraBert/coding-cli',
        icon: 'tabler:arrow-right',
      },
    ]}
  />
</Layout>
